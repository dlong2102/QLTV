
@{
    ViewBag.Title = "Quản lý sách theo thể loại";
}
<link href="~/Areas/Admin/Content/css/SanPham/QLSTTL.css" rel="stylesheet" />

<div class="container">
    <div class="selected">
        <h2>QUẢN LÝ SÁCH THEO THỂ LOẠI</h2>
        @{ 
        var theLoaiList = new List<SelectListItem>
        {
            new SelectListItem { Value = "1", Text = "Khoa học" },
            new SelectListItem { Value = "2", Text = "Công nghệ" },
            new SelectListItem { Value = "3", Text = "Tiểu thuyết" },
            // Thêm các mục thể loại khác cần thiết ở đây
        };
        }

        @using (Html.BeginForm("QLSTTL", "SanPham", FormMethod.Get))
        {
            <div class="form-group">
                <label class="label" for="maTheLoai">Chọn thể loại:</label>
                <select name="maTheLoai" id="maTheLoai" onchange="this.form.submit()">
                    @foreach (var theLoai in theLoaiList)
                    {
                        <option value="@theLoai.Value" @(ViewBag.SelectedTheLoai == theLoai.Value ? "selected" : "")>@theLoai.Text</option>
                    }
                </select>
            </div>
        }


    </div>   
        <table>
            <thead>
                <tr>
                    <th>Tên sách</th>
                    <th>Ảnh</th>
                    <th>Tác giả</th>
                    <th>Năm xuất bản</th>
                    <th>Số lượng</th>
                    <th>Nhà xuất bản</th>
                    <th>Mô tả</th>
                    <!-- Thêm các cột khác tùy ý -->
                </tr>
            </thead>
            <tbody>
               
            </tbody>
        </table>
 
</div>


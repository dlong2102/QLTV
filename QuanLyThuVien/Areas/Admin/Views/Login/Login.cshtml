@{
        Layout = null;
    }

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập</title>
    <link rel="stylesheet" type="text/css" href="~/Areas/Admin/Content/css/Login/Login.css">
    <script src="script.js"></script>
</head>
<body>
    <div class="logo-container">
        <a href="home.html" class="logo-link-LR">
            <img src="~/images/KLIBRARY.png" alt="Logo" class="logo-image">
        </a>
    </div>
    <div class="container">
        <h1>ĐĂNG NHẬP</h1>
        <div class="form-group">
            <label for="username">Tên đăng nhập:</label>
            <input type="text" id="username" name="username" placeholder="Nhập tên đăng nhập" required>
        </div>
        <div class="form-group">
            <label for="password">Mật khẩu:</label>
            <input type="password" id="password" name="password" placeholder="Nhập mật khẩu" required>
        </div>
        <button type="submit"> <a href="/Admin/Home/Index">Đăng nhập </a></button>

        <div class="message">
            <p>Chưa có tài khoản? <a href="register.html">Đăng ký</a></p>
        </div>
    </div>
</body>
</html>